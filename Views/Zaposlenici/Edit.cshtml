@model Zaposlenici

@{
  ViewBag.Title = "Ažuriranje zaposlenika";
}

<form 
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
      <input type="hidden" asp-for="IdZaposlenici" />
  <div asp-validation-summary="All"></div>
  @*Ne koristi se, jer se ne rekonstruira cijela država, već se samo koristi id koji je već u parametrima route*@
  @*<input type="hidden" asp-for="OznDrzave" />*@ 
  <div class="form-group">
    <label asp-for="Ime"></label>
    <div><span asp-validation-for="Ime" class="text-danger"></span></div>
    <input asp-for="Ime" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Prezime"></label>
    <div><span asp-validation-for="Prezime" class="text-danger"></span></div>
    <textarea asp-for="Prezime" class="form-control"></textarea>
  </div>
  <div class="form-group">
    <label asp-for="DatumRođenja"></label>
    <div><span asp-validation-for="DatumRođenja" class="text-danger"></span></div>
    <input asp-for="DatumRođenja" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="TrošakZaposlenika"></label>
    <div><span asp-validation-for="TrošakZaposlenika" class="text-danger"></span></div>
    <input asp-for="TrošakZaposlenika" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="IdPoslovi"></label>
   <select class="form-control" asp-for="IdPoslovi" asp-items="ViewBag.Poslovi">
      <option disabled selected value="">Odaberite posao</option>
   </select>
  </div>
  <div class="text-center">
    <button class="btn btn-primary" type="submit">Spremi</button>
    <a asp-action="Index"
       asp-route-page="@ViewBag.Page"
       asp-route-sort="@ViewBag.Sort"
       asp-route-ascending="@ViewBag.Ascending"
       class="btn btn-secondary">Odustani</a>
  </div>
</form>