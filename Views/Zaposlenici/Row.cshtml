@model OZO.ViewModels.ZaposlenikViewModel

<tr>
  <td class="text-left">@Model.IdZaposlenici </td>
  <td class="text-left">@Model.Ime</td>
  <td class="text-left">@Model.Prezime</td>
  <td class="text-left">@Model.DatumRođenja</td>
  <td class="text-left">@Model.TrošakZaposlenika</td>
  <td class="text-left">@Model.Naziv </td>
  <td>
      <a asp-action="Edit"
         asp-route-page="@ViewBag.PagingInfo.CurrentPage"
         asp-route-sort="@ViewBag.PagingInfo.Sort"
         asp-route-ascending="@ViewBag.PagingInfo.Ascending"
         asp-route-id="@Model.IdZaposlenici"         
         class="btn btn-sm" title="Ažuriraj">
         <i class="fas fa-edit"></i></a>
  </td>
  <td>
    <form asp-action="Delete" method="post">
      @*Neće se koristiti direktni submit, ali treba zbog anti forgery tokena*@
      @*Jednako tako nije potreban ni ovaj input type=hidden ako skripta ispravno radi*@
      <input type="hidden" name="id" value="@Model.IdZaposlenici" />
      <button data-idzaposlenici="@Model.IdZaposlenici" class="btn btn-sm btn-danger deleteajax" title="Obriši"><i class="fas fa-trash-alt"></i></button>
    </form>
  </td>
</tr>