@model OZO.ViewModels.PartnerViewModel

@{
    ViewBag.Title = "Novi partner";
}

<h2>Unos novog partnera</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>  
    <div class="text-center">
        <label class="radio-inline"><input type="radio" asp-for="TipPartnera" value="O">Osoba</label>
        <label class="radio-inline"><input type="radio" asp-for="TipPartnera" value="T">Tvrtka</label>
    </div>
    <div class="form-group samotvrtka">
        <label asp-for="NazivTvrtke"></label>
        <div><span asp-validation-for="NazivTvrtke" class="text-danger"></span></div>
        <input asp-for="NazivTvrtke" class="form-control" />
    </div>
    <div class="form-group samotvrtka">
        <label asp-for="MbrTvrtke"></label>
        <div><span asp-validation-for="MbrTvrtke" class="text-danger"></span></div>
        <input asp-for="MbrTvrtke" class="form-control" />
    </div>    
    <div class="form-group samoosoba">
        <label asp-for="ImeOsobe"></label>
        <div><span asp-validation-for="ImeOsobe" class="text-danger"></span></div>
        <input asp-for="ImeOsobe" class="form-control" />
    </div>
    <div class="form-group samoosoba">
        <label asp-for="PrezimeOsobe"></label>
        <div><span asp-validation-for="PrezimeOsobe" class="text-danger"></span></div>
        <input asp-for="PrezimeOsobe" class="form-control" />
    </div> 
    <div class="form-group ">
        <label asp-for="Mbr"></label>
        <div><span asp-validation-for="Mbr" class="text-danger"></span></div>
        <input asp-for="Mbr" class="form-control" />
    </div>     
    <div class="form-group">
        <label asp-for="AdrPartnera"></label>
        <div><span asp-validation-for="AdrPartnera" class="text-danger"></span></div>
        <input asp-for="AdrPartnera" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AdrIsporuke"></label>
        <div><span asp-validation-for="AdrIsporuke" class="text-danger"></span></div>
        <input asp-for="AdrIsporuke" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>
</form>

@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/js/autocomplete.js"></script>

    <script type="text/javascript">        
        $(function () {            
            $('input:radio').change(function () {
                OsobaIliTvrtka($(this).val());
            });

            OsobaIliTvrtka($('input:checked').val());
        });
               
        function OsobaIliTvrtka(tip) {            
            if (tip == 'O') {
                $(".samotvrtka").hide();
                $(".samoosoba").show();
            }
            else {
                $(".samoosoba").hide();
                $(".samotvrtka").show();
            }        
        }
    </script>
}