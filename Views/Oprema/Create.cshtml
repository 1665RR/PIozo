@model Oprema

@{
  ViewBag.Title = "Nova oprema";
}

<h2>Unos novog artikla</h2>

<div class="container">
  <form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="form-group row"></div>


    <div class="form-group row">
      <label asp-for="Naziv" class="col-sm-2 col-form-label"></label>
      <div class="col-sm-5">
        <input asp-for="Naziv" class="form-control" />
      </div>
      <span asp-validation-for="Naziv" class="col-sm-5 text-danger"></span>
    </div>

    <div class="form-group row">
      <label asp-for="Status" class="col-sm-2 col-form-label"></label>
      <div class="col-sm-5">
        <input asp-for="Status" class="form-control" />
      </div>
      <span asp-validation-for="Status" class="col-sm-5 text-danger"></span>
    </div>

    <div class="form-group row">
      <label asp-for="Dostupnost" class="col-sm-2 col-form-label"></label>
      <div class="col-sm-1 text-left">
        <input asp-for="Dostupnost" class="form-control input-sm" />
      </div>
      <span asp-validation-for="Dostupnost" class="col-sm-5 text-danger"></span>
    </div>

    <div class="form-group">
    <label asp-for="IdReferentniTip"></label>
    <select class="form-control" asp-for="IdReferentniTip" asp-items="ViewBag.ReferentniTip">
      <option disabled selected value="">Odaberite referentni tip</option>
    </select>
    </div>

    <div class="form-group row">
      <label asp-for="SlikaOpreme" class="col-sm-2 col-form-label"></label>
      <div class="col-sm-5">
        <input type="file" name="slika" />
      </div>
      <span asp-validation-for="SlikaOpreme" class="col-sm-5 text-danger"></span>
    </div>

    <div class="form-group row">
      <div class="col-sm-2"></div>
      <div class="col-sm-5">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
      </div>
    </div>
  </form>
</div>